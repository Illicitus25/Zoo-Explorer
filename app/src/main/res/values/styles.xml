<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- res/values/styles.xml -->
    <style name="ToolbarTitleTextAppearance" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/balootwo</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/Green</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="FilterButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">16dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="strokeColor">@color/Green</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:backgroundTint">@color/Beige</item>
    </style>




</resources>